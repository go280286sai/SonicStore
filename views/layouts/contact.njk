                            <div class="form-group">
                              <input type="text" class="email-bt" placeholder="Email*" name="email" required>
                            </div>
                            <div class="form-group">
                              <input type="text" class="email-bt" placeholder="Phone Numbar*" name="phone" required>
                            </div>
